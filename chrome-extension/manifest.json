{
    "manifest_version": 3,
    "name": "Redirect to sandbox",
    "version": "1.0",
    "description": "Redirects to sandbox with selected text as URL parameter.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "/Images/sandbox.png",
      "48": "/Images/sandbox.png",
      "128": "/Images/sandbox.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/Images/sandbox.png",
        "48": "/Images/sandbox.png",
        "128": "/Images/sandbox.png"
      }
    }
  }
  